<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-body">
                    <h4>Listado de Carreras</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">
            <table class="table table-sm table-dark">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Id Carrera</th>
                <th scope="col">Nombre Carrera</th>
                 <th scope="col">Modificar</th>
                 <th scope="col">Eliminar</th>
                </tr>
            </thead>    
            <tbody>   
                {{#each carreras}}
                        <tr>
                        <th scope="row">1</th>
                        <td>{{idCarrera}}</td>
                        <td>{{nombre}}</td>
                        <td> <a class="btn btn-danger" href="/carreras/delete/{{idCarrera}}">Borrar Carrera </a> </td>
                        <td> <a class="btn btn-warning" href="/carreras/edit/{{idCarrera}}">Editar Carrera</a> </td>
                        </tr>
                {{/each}}
            </tbody>
            </table>        
    </div>
</div>