<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-body">
                    <h4>Listado de Alumnos</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">
            <table class="table table-sm table-dark">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Id Alumno</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Id Carrera</th>             
                 <th scope="col">Modificar</th>
                 <th scope="col">Eliminar</th>
                </tr>
            </thead>    
            <tbody>   
        {{#each links}}
                <tr>
                <th scope="row">1</th>
                <td>{{idAlumno}}</td>
                <td>{{nombre}}</td>
                <td>{{apellido}}</td>
                <td>{{idCarrera}}</td>
                    <td> <a class="btn btn-danger" href="/links/delete/{{idAlumno}}">Borrar Usuario </a> </td>
                    <td> <a class="btn btn-warning" href="/links/edit/{{idAlumno}}">Editar Usuario</a> </td>
                </tr>
        {{/each}}
            </tbody>
            </table>        
    </div>
</div>